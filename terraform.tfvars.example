# Example Terraform Variables File
# Copy this file to terraform.tfvars and customize the values

# Environment configuration (dev, staging, prod)
environment = "dev"

# Primary Azure region (Hub will be in South Central US)
primary_location = "southcentralus"

# Resource group locations (names are automatically generated)
resource_group_locations = {
  hub    = "southcentralus"  # SCU for South Central US
  spoke1 = "brazilsouth"     # BRS for Brazil South
}

# Optional: Enable network monitoring features
enable_network_watcher = true
enable_ddos_protection = false

# Optional: Additional tags for cost allocation and organization
additional_tags = {
  Department = "IT"
  Application = "NetworkInfrastructure"
  BusinessOwner = "InfrastructureTeam"
}