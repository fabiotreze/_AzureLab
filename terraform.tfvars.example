# Example Terraform Variables File
# Copy this file to terraform.tfvars and customize the values

# Environment configuration
environment = "dev"

# Primary Azure region (Hub will be in South Central US)
primary_location = "southcentralus"

# Resource groups configuration
resource_group_config = {
  hub = {
    name     = "rg-hub-spoke-network-dev-scu"  # SCU for South Central US
    location = "southcentralus"
  }
  spoke1 = {
    name     = "rg-spoke1-network-dev-brs"     # BRS for Brazil South
    location = "brazilsouth"
  }
}

# Optional: Enable network monitoring features
enable_network_watcher = true
enable_ddos_protection = false

# Optional: Additional tags for cost allocation and organization
additional_tags = {
  Department = "IT"
  Application = "NetworkInfrastructure"
  BusinessOwner = "InfrastructureTeam"
}